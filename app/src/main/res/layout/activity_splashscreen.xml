<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashScreen">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="601dp"
        android:layout_height="281dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/reddit"
        tools:layout_editor_absoluteY="-3dp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="920dp"
        android:layout_height="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bottom_white"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="Welcome To \n MindGrove Forum"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="``Join us ! \n You can freely share your thoughts and open up \n about your psychological concerns! \n A safe space for open and honest expression,,"
        android:textColor="#5E5C5C"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="0.6"
        tools:layout_editor_absoluteY="411dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="221dp"
        android:layout_height="127dp"
        android:layout_marginStart="213dp"
        android:background="@drawable/orange"
        android:gravity="center"
        android:onClick="@{viewModel::onGoToSecondActivityClick}"
        android:text="Get Started"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-30dp"
        android:layout_marginEnd="-20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
